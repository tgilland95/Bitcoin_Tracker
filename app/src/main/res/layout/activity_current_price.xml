<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.example.tyler.stock_tracker.CurrentPriceActivity">

  <Button
    android:id="@+id/home_btn"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    android:onClick="goHome"
    android:text="@string/back"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <Button

    android:id="@+id/btnApiTest"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="532dp"
    android:text="@string/test_api"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/home_btn"
      tools:layout_editor_absoluteX="976dp" />

  <TextView
      android:id="@+id/textView_current_price_value"
      android:layout_width="329dp"
      android:layout_height="271dp"
      android:layout_marginBottom="47dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:fontFamily="sans-serif"
      android:textSize="24sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      tools:layout_editor_absoluteX="16dp" />

</android.support.constraint.ConstraintLayout>
